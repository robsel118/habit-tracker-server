{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "models/*": ["models/*"]
    },
    "outDir": "./build",
    "lib": ["es5", "es6"],
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "build",
    "jest.config.js",
    "babel.config.js",
    ".eslintrc.js"
  ]
}
